  <div class="container">
    <h1>Log Aplication</h1>
        <form method="post" action="/log" >
            <div class="row">
                <div class="col-md-3 mt-1 mb-1" >    
                    <input type="text" class="form-control" name="cari" value="<%= typeof cari!='undefined'?cari:''%>">
                </div>  
                <div class="col-md-3 mt-1">
                    <button type="submit" class="btn btn-primary d-block"><i class="bi bi-search"></i> Cari</button>
                </div>
            </div> 
        </form>
    <div class="row">
        <div class="col">

            <!-- menampilkan pesan -->
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert"> <%= msg %> </div>
            <% } %>

            <% if (msg2.length !== 0) { %>
                <div class="alert alert-warning" role="alert"> <%= msg2 %> </div>
            <% } %>

            <table class="table table-striped table-hover  mt-3">
                <thead class="table-primary">
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Role</th>
                        <th>Url</th>
                        <th>Method</th>
                        <th>Tanggal</th>
                        <th>Waktu</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (logs == null) { %>
                        <tr><td colspan="6"><center><b>Log dari website ini masih kosong </b></center></td></tr>  
                    <% }else if (logs.length == 0) { %>
                        <tr><td colspan="6"><center><b>Log website ini masih kosong</b></center></td></tr>
                    <% }else{ %>  
                        <% logs.forEach( (log,index) => { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= log.name %> </td>
                                <td><%= log.role %> </td>
                                <td><%= log.url %> </td>                    
                                <td><%= log.method %> </td>                    
                                <td><%= log.tanggal.toLocaleDateString('id-ID') %> </td>
                                <td><%= log.waktu %> </td>                    
                            </tr>
                        <% }) %>
                    <% } %> 
                </tbody>
            </table>
               
        </div>
    </div>
</div>

